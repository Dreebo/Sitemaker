@model IEnumerable<Sitemaker.Models.Site>
@{
    ViewBag.Title = "ShowUser";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                 <a href="@Url.Action("OpenSite", "Sites", new {userName = (string)Session["CurrentUserName"], id = item.Id, indicator = true})">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
        </tr>
    }
</table>

