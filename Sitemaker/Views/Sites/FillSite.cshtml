@model Sitemaker.Models.Site

<style>
    body {
        margin: 0;
        background: rgb(250,250,250);
        font-family: Tahoma;
    }

    p {
        margin: 0;
    }

    h2 {
        margin: 0;
    }

    #wrapper {
        width: 800px;
        margin: 40px auto 0 auto;
    }

    .bl {
        margin: 0 auto;
        height: 440px;
        width: 380px;
        background-color: rgb(0,174,239);
        box-shadow: 4px 4px 13px rgba(0,0,0,.5);
        border: 1px solid rgba(0,0,0,.1);
        border-radius: 15px;
    }

    .logo {
        width: 100px;
        height: 100px;
        background: url(Model.Logo) repeat;
        border-radius: 20px;
        margin: 10px auto 10px auto;
    }

    h2 {
        font-size: 34px;
        font-weight: bold;
        text-align: center;
        color: rgb(255,255,255);
        text-shadow: 2px 4px 3px rgba(0,0,0,0.3);
    }

    .line {
        width: 200px;
        height: 1px;
        background: url(line.png) repeat 200px 1px;
        margin: 10px auto 0 auto;
    }

    .text {
        color: rgb(255,255,255);
        font-size: 14px;
        letter-spacing: 0.8px;
        width: 300px;
        margin: 10px auto 0 auto;
        text-align: center;
    }

    .but-wr {
        margin-top: 50px;
    }

    .but {
        display: block;
        width: 230px;
        height: 40px;
        margin: 15px auto 0 auto;
        text-align: center;
        text-transform: uppercase;
        text-decoration: none;
        color: rgb(255,255,255);
        background-color: rgb(0,118,163);
        color: rgb(255,255,255);
        box-shadow: inset 0 0 6px rgba(29,90,114,1);
        line-height: 40px;
    }
</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>

<body>
<div id="wrapper">
    <div class="bl">
        <div class="logo"><img style="width:100px; height:100px" src="@Model.Logo" /></div>
        <h2>@Model.Name</h2>
        <div class="line"></div>
        <p class="text"> @Model.About</p>
        <div class="but-wr">
            <a  href="@Url.Action("LoadPage", "Sites", new {userName = Model.UserName, id = Model.Id})" class="but btn btn-primary">@Resources.Resource.CreatePage</a>
            <a href="@Url.Action("CreateMenu", "Sites", new {userName = Model.UserName, id = Model.Id})" class="but btn btn-primary">@Resources.Resource.CreateMenu</a>
        </div>
    </div>
</div>

    @foreach (var page in Model.Pages)
    {
        <section class="grid-wrap">
            <div class="grid-wrap">
                <iframe src="@Url.Action("PageView", "Sites", new {userName = Model.UserName, id = Model.Id, pageId = @page.Id})"> </iframe>

            </div>
        </section>
    }
    </body>
</html>
