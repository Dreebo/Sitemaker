@model IEnumerable<Sitemaker.Models.Site>
@{
    ViewBag.Title = "ShowMySite";
}

<h2>ShowMySite</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
