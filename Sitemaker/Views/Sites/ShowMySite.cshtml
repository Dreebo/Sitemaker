@model IEnumerable<Sitemaker.Models.Site>
@{
    ViewBag.Title = "ShowMySite";
}

<h2>ShowMySite</h2>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.About)
            </td>
            <td>

                @*@Html.ActionLink("Edit", "Edit", new { userName = (string)Session["CurrentUserName"], id = item.Id }) |*@
                <a href="@Url.Action("Details", "Sites", new {userName = (string) Session["CurrentUserName"], id = item.Id})" class="btn btn-default">Details</a>
                <a href="@Url.Action("Delete", "Sites", new {userName = (string) Session["CurrentUserName"], id = item.Id})" class="btn btn-default">Delete</a>
                
                @if (!item.Pablish)
                {
                    <a href="@Url.Action("PublishSite", "Sites", new { userName = (string)Session["CurrentUserName"], id = item.Id })" class="btn btn-default">Publish</a>
                
                }
            </td>
        </tr>
    }
    </table>



