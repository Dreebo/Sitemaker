            </td>
            <td>

                @*@Html.ActionLink("Edit", "Edit", new { userName = (string)Session["CurrentUserName"], id = item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { userName = (string)Session["CurrentUserName"],  id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { userName = (string)Session["CurrentUserName"],  id = item.Id }) |
                @Html.ActionLink("Publish site", "PublishSite", new { userName = (string)Session["CurrentUserName"], id = item.Id }) 
            </td>
        </tr>
    }
