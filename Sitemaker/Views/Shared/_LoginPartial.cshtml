@using Microsoft.AspNet.Identity
@using Sitemaker.Models
<link href="~/Content/DropDownMenu.css" rel="stylesheet" />

@if (Request.IsAuthenticated)
{

    <div class="lang-container">
        <a href="@Url.Action("ChangeCulture", "Sites", new {lang = "ru" })">
            <img src="~/img/ru.png" class="lang-icon" />
        </a>
        <a href="@Url.Action("ChangeCulture", "Sites", new {lang = "en" })">
            <img src="~/img/en.png" class="lang-icon" />
        </a>
    </div>


    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <nav role="navigation">
            <ul class="navar">
                <li>
                    <a class="has-submenu">@User.Identity.GetUserName()</a>
                    <ul class="submenu">
                        <li>@Html.ActionLink("Личный кабинет", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                        <li><a href="@Url.Action("ShowMySite", "Sites", new {userName = (string) Session["CurrentUserName"]})">Show My Site</a></li>
                            <li><a href="@Url.Action("CreateSite", "Sites", new {userId = (string) Session["CurrentUserName"]})">Create Site</a></li>
                        @if (User.IsInRole("admin"))
                        {
                        <li><a href="@Url.Action("Users", "Admin")">Admin</a></li>}
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>

        
}
