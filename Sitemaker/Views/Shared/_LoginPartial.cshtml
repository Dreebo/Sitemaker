@using Microsoft.AspNet.Identity
<link href="~/Content/DropDownMenu.css" rel="stylesheet" />

@if (Request.IsAuthenticated)
{

    <div class="lang-container">
        
        <a href="@Url.Action("ChangeCulture", "Sites", new {lang = "ru" })">
            <img src="~/img/ru.png" class="lang-icon" />
        </a>
        <a href="@Url.Action("ChangeCulture", "Sites", new {lang = "en" })">
            <img src="~/img/en.png" class="lang-icon" />
        </a>
       
            <button class= "btn btn-primary" id="black" name="button" value="black" onclick='change_color(this)'>Black</button>
            <button class= "btn btn-primary" id="white" name="button" value="white" onclick='change_color(this)'>White</button>
            
        
    </div>

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <nav role="navigation">
            <ul class="navar">
                <li>
                    <a class="has-submenu">@User.Identity.GetUserName()</a>
                    <ul class="submenu">
                        <li>@Html.ActionLink(@Resources.Resource.PersonalArea, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                        <li><a href="@Url.Action("ShowMySite", "Sites", new { userName = (string)Session["CurrentUserName"]})">@Resources.Resource.ShowMySite</a></li>
                        <li><a href="@Url.Action("CreateSite", "Sites", new {userId = (string) Session["CurrentUserName"]})">@Resources.Resource.CreateSite</a></li>
                        @if (User.IsInRole("admin"))
                        {
                        <li><a href="@Url.Action("Users", "Admin")">@Resources.Resource.Admin</a></li>}
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.Resource.LogOff</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>    
}

<script>
     function change_color(obj)
     {
         var theme = obj.value;
         theme && (document.body.style.backgroundColor = theme);
     }
</script>


